{
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "packagePatterns": ["^eslint$", "^eslint-plugin", "^@typescript-eslint"],
      "groupName": "ESLint dependencies"
    },
    {
      "packagePatterns": ["^@wdio", "^webdriverio"],
      "groupName": "WebdriverIO dependencies"
    },
    {
      "packagePatterns": [
        "@types/chai",
        "@types/chai-as-promised",
        "@types/sinon",
        "@types/sinon-chai",
        "chai",
        "chai-as-promised",
        "istanbul",
        "istanbul-merge",
        "mocha-testdata",
        "nyc",
        "sinon",
        "sinon-chai"
      ],
      "groupName": "test dependencies"
    },
    {
      "packagePatterns": [
        "^@cucumber"
      ],
      "groupName": "Cucumber"
    },
    {
      "packagePatterns": [
        "ts-node",
        "tslint",
        "tslint-microsoft-contrib",
        "typescript"
      ],
      "groupName": "TypeScript dependencies"
    },
    {
      "packagePatterns": [
        "cheerio",
        "clean-css",
        "esdoc",
        "esdoc-accessor-plugin",
        "esdoc-coverage-plugin",
        "esdoc-external-ecmascript-plugin",
        "esdoc-integrate-test-plugin",
        "esdoc-lint-plugin",
        "esdoc-publish-html-plugin",
        "esdoc-type-inference-plugin",
        "esdoc-undocumented-identifier-plugin",
        "esdoc-unexported-identifier-plugin",
        "handlebars",
        "highlight.js",
        "jstransformer-handlebars",
        "jstransformer-marked",
        "metalsmith",
        "metalsmith-autotoc",
        "metalsmith-browser-sync",
        "metalsmith-clean-css",
        "metalsmith-discover-helpers",
        "metalsmith-discover-partials",
        "metalsmith-filemetadata",
        "metalsmith-ignore",
        "metalsmith-in-place",
        "metalsmith-layouts",
        "metalsmith-path",
        "metalsmith-regex-replace",
        "metalsmith-rename",
        "metalsmith-sass",
        "metalsmith-sitemap",
        "metalsmith-uglify",
        "yaml"
      ],
      "groupName": "documentation dependencies"
    }
  ]
}
